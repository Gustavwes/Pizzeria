<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Gustav's Pizzeria</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous" />
    <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css" />
</head>

<body>

<div class="container-fluid">
    <div class="row p-3 mb-2 bg-warning text-dark">
        <div class="col-sm-4">
            <a asp-controller="Home" asp-action="StartView"><h2>Gustav's Pizzeria</h2></a>
        </div>
        @*<div class="col-sm-4">
            <a asp-controller="Home" asp-action="NewPost" class="text-primary">Create new Post</a>
        </div>*@
        <div class="col-sm-4">

            @using (Html.BeginForm())
            {
                <input type="text" name="searchValue" />
                <input type="submit" class="btn btn-info" asp-action="SearchResults" value="Search" />
            }
        </div>
    </div>

    @RenderBody()


</div>

@*Bootstrap Stuff*@
